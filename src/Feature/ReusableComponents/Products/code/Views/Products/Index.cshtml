@model Websites.Feature.ReusableComponents.Products.Models.ProductsData

<h1 style="text-align :center;">@Html.Sitecore().Field("Title")</h1>
@for (int i = 0; i < Model.ProductItems.Count; i++)
{
    if (Model.ProductItems[i] != null)
    {
        <div class="col mb-4">
            <div class="card">
                @Html.Sitecore().Field("Image", Model.ProductItems[i], new { mw = 360, mh = 480 })
                <div class="card-body">
                    <h5 class="card-title">@Html.Sitecore().Field("Title", Model.ProductItems[i])</h5>
                    <p class="card-text">@Html.Sitecore().Field("Description", Model.ProductItems[i])</p>
                    <a class="btn btn-outline-info" href="@Sitecore.Links.LinkManager.GetItemUrl(Model.ProductItems[i])"> Details </a>
                </div>
            </div>
        </div>
    }
}

